<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_main_blue"
            android:textSize="@dimen/app_text_size_big"
            android:textStyle="bold"
            tools:text="-"/>

        <TextView
            android:id="@+id/release_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toLeftOf="@+id/imageView"
            android:drawablePadding="5dp"
            android:textColor="@color/app_secondary_blue"
            android:textSize="@dimen/app_text_size_medium"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_data"
            android:layout_toLeftOf="@+id/imageView"
            android:drawablePadding="5dp"
            android:textColor="@color/app_secondary_blue"
            android:textSize="@dimen/app_text_size_medium"/>

    </RelativeLayout>
</LinearLayout>